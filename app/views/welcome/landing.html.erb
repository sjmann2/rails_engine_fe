<%= form_with url: search_path, method: :get, local: true do |form| %>
  <%= form.label :search, 'Search for merchants by name' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>

<% if @merchants %>
<h1>Merchants</h1>
  <% @merchants.each do |merchant| %>
    <%= merchant.name %>
    <%# <%= link_to merchant.name, merchant_show_path(merchant) %> 
  <% end %>
<% end %>